{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build all packages",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "npm install",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Watch all packages",
      "type": "shell",
      "group": "build",
      "command": "npm run watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build server",
      "type": "shell",
      "group": "build",
      "command": "npm run build:server",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Copy server",
      "type": "shell",
      "command": "npm copy:server",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
  "label": "Compile VSCode extension (umldiagram)",
  "type": "shell",
  "command": "npm run compile",
  "options": {
    "cwd": "${workspaceFolder}/application/vscode"
  },
  "group": "build",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "problemMatcher": []
}
  ]
}
