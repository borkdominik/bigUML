{
  "name": "@borkdominik-biguml/biguml-server",
  "displayName": "bigUML",
  "version": "1.0.0",
  "description": "Please enter a brief description here",
  "categories": [
    "Programming Languages"
  ],
  "type": "module",
  "main": "./out/extension.cjs",
  "bin": {
    "uml-cli": "./bin/cli.js"
  },
  "files": [
    "bin"
  ],
  "scripts": {
    "build": "tsc -b && tsx esbuild.mts",
    "clean": "rimraf lib tsconfig.tsbuildinfo bundle",
    "esbuild": "tsx esbuild.mts",
    "format:generated": "npx prettier --write '**/yo-generated/**/*.{ts,tsx}'",
    "generate": "generator-langium-model-management generate && langium generate",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "lint": "eslint src --ext ts",
    "vscode:prepublish": "npm run build && npm run lint",
    "watch": "tsc -b tsconfig.json --watch"
  },
  "contributes": {
    "grammars": [
      {
        "language": "bigUML-uml",
        "scopeName": "source.uml",
        "path": "./syntaxes/uml.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "bigUML-uml",
        "aliases": [
          "UML",
          "uml",
          "biguml"
        ],
        "extensions": [
          ".uml"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "dependencies": {
    "@borkdominik-biguml/uml-glsp-client": "*",
    "@borkdominik-biguml/uml-protocol": "*",
    "@borkdominik-biguml/model-langium-generator": "*",
    "@borkdominik-biguml/model-service": "*",
    "@eclipse-glsp/client": "2.0.0",
    "@eclipse-glsp/layout-elk": "2.0.0",
    "@eclipse-glsp/server": "2.0.0",
    "@eclipse-glsp/vscode-integration": "2.0.0",
    "@vscode/codicons": "^0.0.25",
    "chalk": "~4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "~10.0.0",
    "inversify": "6.0.1",
    "langium": "^2.1.3",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "urijs": "^1.19.11",
    "vscode-languageclient": "9.0.1",
    "vscode-languageserver": "9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "~16.18.41",
    "@types/reflect-metadata": "^0.1.0",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "~6.4.1",
    "@typescript-eslint/parser": "~6.4.1",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "~0.19.2",
    "eslint": "~8.47.0",
    "langium-cli": "^2.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "vscode": "^1.63.0"
  }
}
