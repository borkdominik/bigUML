    "**/@eclipse-glsp/theia-integration": "1.1.0-RC05",
    "**/@eclipse-glsp/vscode-integration": "1.1.0-RC05",
    "**/@eclipse-glsp/vscode-integration-webview": "1.1.0-RC05",
    "**/@theia/application-manager": "1.35.0",
