{
  "name": "client",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "packages/uml-vscode-integration/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:server": "cd ../server && ./gradlew clean shadowJar && cd ../client && npm copy:server",
    "check:headers": "glsp checkHeaders .",
    "clean": "lerna run clean",
    "copy:server": "tsx ./scripts/copy-server.ts",
    "depcheck": "npx depcheck --config .depcheck.yml",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "package": "npm run build:server && cd packages/uml-vscode-integration/extension && npm vscode:package && mv ./*.vsix ${INIT_CWD}/release/vsix",
    "package:zip": "npm package && cd ${INIT_CWD} && zip -r ./release-$(date +%Y%m%d-%H%M).zip ./release",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.2",
    "chai": "^5.2.0",
    "esbuild": "^0.17.10",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.20.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-n": "^17.15.1",
    "globals": "^15.15.0",
    "lerna": "^8.1.9",
    "rimraf": "^6.0.1",
    "tsx": "^3.12.3",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "prettier-plugin-packagejson": "^2.5.8"
  },
  "engines": {
    "node": ">=20 < 22"
  },
  "overrides": {
    "@eclipse-glsp/client": "2.1.0",
    "@eclipse-glsp/protocol": "2.1.0",
    "@eclipse-glsp/vscode-integration": "2.1.0",
    "@eclipse-glsp/vscode-integration-webview": "2.1.0",
    "inversify": "6.0.1",
    "vscode-jsonrpc": "8.1.0"
  }
}
