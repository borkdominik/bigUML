    "**/@theia/filesystem": "1.35.0",
    "**/@theia/keymaps": "1.35.0",
    "**/@theia/markers": "1.35.0",
    "**/@theia/messages": "1.35.0",
    "**/@theia/monaco": "1.35.0",
    "**/@theia/navigator": "1.35.0",
    "**/@theia/outline-view": "1.35.0",
