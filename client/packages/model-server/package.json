{
  "name": "@borkdominik-biguml/model-server",
  "displayName": "model-server",
  "version": "0.0.1",
  "description": "Please enter a brief description here",
  "categories": [
    "Programming Languages"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/vscode/index.d.ts",
      "default": "./lib/vscode/index.js"
    },
    "./grammar": {
      "types": "./lib/gen/langium/language/index.d.ts",
      "default": "./lib/gen/langium/language/index.js"
    }
  },
  "bin": {
    "uml-diagram-cli": "./bin/cli.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "generate": "generator-language-server generate && langium generate",
    "generate:ecore": "generator-language-server generate --from=ecore && langium generate",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "language:generate": "uml-language-tooling generate -d @borkdominik-biguml/uml-language/definition -g ./gen",
    "lint": "eslint src --ext ts",
    "vscode:prepublish": "npm run build && npm run lint",
    "watch": "tsc -b tsconfig.json --watch"
  },
  "contributes": {
    "grammars": [
      {
        "language": "uml-diagram",
        "scopeName": "source.uml-diagram",
        "path": "./syntaxes/uml-diagram.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "uml-diagram",
        "aliases": [
          "UML Diagram",
          "uml-diagram"
        ],
        "extensions": [
          ".uml"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:uml-diagram"
  ],
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.1.0",
    "chalk": "~4.1.2",
    "commander": "~10.0.0",
    "fast-json-patch": "3.1.1",
    "jsonpath": "1.1.1",
    "langium": "^2.1.3",
    "net": "1.0.2",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.1",
    "vscode-jsonrpc": "8.1.0",
    "vscode-languageclient": "9.0.1",
    "vscode-languageserver": "9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "~16.18.41",
    "@types/reflect-metadata": "^0.1.0",
    "@types/vscode": "~1.67.0",
    "@typescript-eslint/eslint-plugin": "~6.4.1",
    "@typescript-eslint/parser": "~6.4.1",
    "@vscode/vsce": "^2.17.0",
    "esbuild": "~0.19.2",
    "eslint": "~8.47.0",
    "langium-cli": "^2.1.0",
    "typescript": "~5.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "vscode": "^1.67.0"
  }
}
