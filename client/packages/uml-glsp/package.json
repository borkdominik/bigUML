  },
  "license": "(EPL-2.0 OR MIT)",
  "author": {
    "name": "EclipseSource"
  },
  "files": [
    "lib",
    "src",
    "css",
    "images"
  ],
  "scripts": {
    "build": "tsc -b && yarn run lint",
    "clean": "rimraf lib tsconfig.tsbuildinfo",
    "icons": "tsx ./scripts/icons.ts",
