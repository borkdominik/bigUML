    "lint:fix": "eslint --fix -c ./.eslintrc.js --ext .ts,.tsx ./src",
    "prepare": "yarn run clean && yarn run build",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@eclipse-glsp/client": "next",
    "balloon-css": "^0.5.0",
    "reflect-metadata": "^0.1.13"
  },
