{
  "name": "biguml-vscode",
  "displayName": "bigUML Modeling Tool",
  "version": "0.1.0",
  "description": "UML-VSCode extension",
  "categories": [
    "Programming Languages"
  ],
  "homepage": "https://github.com/borkdominik/bigUML",
  "bugs": "https://github.com/borkdominik/bigUML/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/borkdominik/bigUML.git"
  },
  "publisher": "BIGModelingTools",
  "main": "./lib/main",
  "files": [
    "lib",
    "src",
    "css",
    "pack"
  ],
  "scripts": {
    "build": "tsx .esbuild.mts",
    "build:prod": "yarn build --es-minify",
    "clean": "rimraf lib tsconfig.tsbuildinfo server/**/*.log",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:ci": "yarn lint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix --ext .ts,.tsx ./src",
    "package": "vsce package --yarn",
    "prepare": "yarn clean && yarn build",
    "vscode:prepublish": "yarn build:prod",
    "watch": "yarn build --es-watch"
  },
  "contributes": {
    "commands": [
      {
        "command": "bigUML.model.newEmpty",
        "title": "New Empty UML Diagram",
        "category": "bigUML",
        "enablement": "workspaceFolderCount > 0"
      },
      {
        "command": "bigUML.fit",
        "title": "Fit to Screen",
        "category": "bigUML",
        "enablement": "activeCustomEditorId == 'bigUML.diagramView'"
      },
      {
        "command": "bigUML.center",
        "title": "Center selection",
        "category": "bigUML",
        "enablement": "activeCustomEditorId == 'bigUML.diagramView'"
      }
    ],
    "configuration": {
      "title": "bigUML",
      "properties": {
        "bigUML.hideUnotation": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Hide the *.unotation files."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "bigUML.diagramView",
        "displayName": "bigUML Editor",
        "selector": [
          {
            "filenamePattern": "*.uml"
          }
        ]
      }
    ],
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "bigUML.fit",
        "when": "activeCustomEditorId == 'bigUML.diagramView'"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "bigUML.center",
        "when": "activeCustomEditorId == 'bigUML.diagramView'"
      },
      {
        "key": "ctrl+a",
        "mac": "ctrl+a",
        "command": "bigUML.selectAll",
        "when": "activeCustomEditorId == 'bigUML.diagramView'"
      }
    ],
    "languages": [
      {
        "id": "bigUML-uml",
        "extensions": [
          ".uml"
        ],
        "icon": {
          "light": "./resources/file_icons/light/uml.svg",
          "dark": "./resources/file_icons/dark/uml.svg"
        }
      },
      {
        "id": "bigUML-unotation",
        "extensions": [
          ".unotation"
        ],
        "mimetypes": [
          "xml"
        ],
        "icon": {
          "light": "./resources/file_icons/light/unotation.svg",
          "dark": "./resources/file_icons/dark/unotation.svg"
        }
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "bigUML.model.newEmpty",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "explorer/context": [
        {
          "command": "bigUML.model.newEmpty",
          "group": "navigation@10",
          "when": "explorerResourceIsFolder || explorerResourceIsRoot"
        }
      ],
      "editor/title": [
        {
          "submenu": "bigUML.editor.title",
          "group": "bookmarks"
        }
      ],
      "bigUML.editor.title": [
        {
          "command": "bigUML.fit",
          "group": "navigation",
          "when": "activeCustomEditorId == 'bigUML.diagramView'"
        },
        {
          "command": "bigUML.center",
          "group": "navigation",
          "when": "activeCustomEditorId == 'bigUML.diagramView'"
        }
      ]
    },
    "submenus": [
      {
        "id": "bigUML.editor.title",
        "label": "Diagram"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:bigUML.uml",
    "onLanguage:bigUML.unotation",
    "onCommand:bigUML.model.newEmpty",
    "workspaceContains:**/*.uml"
  ],
  "dependencies": {
    "@borkdominik-biguml/uml-common": "*",
    "@borkdominik-biguml/uml-glsp": "*",
    "@borkdominik-biguml/uml-modelserver": "*",
    "@eclipse-glsp/vscode-integration": "next",
    "@vscode/codicons": "^0.0.25",
    "inversify": "5.1.1",
    "reflect-metadata": "^0.1.13",
    "urijs": "^1.19.11"
  },
  "devDependencies": {
    "@borkdominik-biguml/uml-vscode-integration-webview": "*",
    "@types/urijs": "1.19.11",
    "@types/vscode": "^1.54.0",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.17.10"
  },
  "engines": {
    "vscode": "^1.54.0"
  }
}
