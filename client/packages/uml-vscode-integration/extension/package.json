{
  "name": "@borkdominik-biguml/uml-vscode-integration-extension",
  "displayName": "bigUML",
  "version": "0.1.0",
  "description": "UML-VSCode extension",
  "categories": [
    "Programming Languages"
  ],
  "homepage": "https://github.com/borkdominik/bigUML",
  "bugs": "https://github.com/borkdominik/bigUML/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/borkdominik/bigUML.git"
  },
  "main": "./lib/main",
  "files": [
    "lib",
    "src",
    "css",
    "pack"
  ],
  "scripts": {
    "build": "tsx .esbuild.mts",
    "build:prod": "ES_MINIFY=true yarn build",
    "clean": "rimraf lib tsconfig.tsbuildinfo ",
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:ci": "yarn lint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix --ext .ts,.tsx ./src",
    "package": "vsce package --yarn",
    "prepare": "yarn clean && yarn build",
    "vscode:prepublish": "yarn build:prod",
    "watch": "ES_WATCH=true yarn build"
  },
  "contributes": {
    "commands": [
      {
        "command": "uml.newDiagram",
        "title": "New Diagram",
        "category": "UML Diagram"
      },
      {
        "command": "uml.fit",
        "title": "Fit to Screen",
        "category": "UML Diagram",
        "enablement": "activeCustomEditorId == 'uml.glspDiagram'"
      },
      {
        "command": "uml.center",
        "title": "Center selection",
        "category": "UML Diagram",
        "enablement": "activeCustomEditorId == 'uml.glspDiagram'"
      },
      {
        "command": "uml.layout",
        "title": "Layout diagram",
        "category": "UML Diagram",
        "enablement": "activeCustomEditorId == 'uml.glspDiagram'"
      },
      {
        "command": "uml.exportAsSVG",
        "title": "Export as SVG",
        "category": "UML Diagram",
        "enablement": "activeCustomEditorId == 'uml.glspDiagram'"
      }
    ],
    "customEditors": [
      {
        "viewType": "uml.glspDiagram",
        "displayName": "UML Diagram Editor",
        "selector": [
          {
            "filenamePattern": "*.uml"
          }
        ]
      }
    ],
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "uml.fit",
        "when": "activeCustomEditorId == 'uml.glspDiagram'"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "uml.center",
        "when": "activeCustomEditorId == 'uml.glspDiagram'"
      },
      {
        "key": "ctrl+a",
        "mac": "ctrl+a",
        "command": "uml.selectAll",
        "when": "activeCustomEditorId == 'uml.glspDiagram'"
      },
      {
        "key": "alt+l",
        "mac": "alt+l",
        "command": "uml.layout",
        "when": "activeCustomEditorId == 'uml.glspDiagram'"
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "uml.newDiagram"
        }
      ],
      "editor/title": [
        {
          "submenu": "uml.editor.title",
          "group": "bookmarks"
        }
      ],
      "uml.editor.title": [
        {
          "command": "uml.fit",
          "group": "navigation",
          "when": "activeCustomEditorId == 'uml.glspDiagram'"
        },
        {
          "command": "uml.center",
          "group": "navigation",
          "when": "activeCustomEditorId == 'uml.glspDiagram'"
        },
        {
          "command": "uml.layout",
          "group": "navigation",
          "when": "activeCustomEditorId == 'uml.glspDiagram'"
        },
        {
          "command": "uml.exportAsSVG",
          "when": "activeCustomEditorId == 'uml.glspDiagram'"
        }
      ]
    },
    "submenus": [
      {
        "id": "uml.editor.title",
        "label": "Diagram"
      }
    ]
  },
  "activationEvents": [
    "*"
  ],
  "dependencies": {
    "@borkdominik-biguml/uml-common": "*",
    "@borkdominik-biguml/uml-glsp": "*",
    "@borkdominik-biguml/uml-modelserver": "*",
    "@eclipse-glsp/vscode-integration": "next",
    "@vscode/codicons": "^0.0.25",
    "inversify": "5.1.1",
    "reflect-metadata": "^0.1.13",
    "urijs": "^1.19.11"
  },
  "devDependencies": {
    "@borkdominik-biguml/uml-vscode-integration-webview": "*",
    "@types/urijs": "1.19.11",
    "@types/vscode": "^1.54.0",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.17.10"
  },
  "engines": {
    "vscode": "^1.54.0"
  }
}
